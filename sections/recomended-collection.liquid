<div class="recomended-collection__section">
    <div class="recomended__content">
        {% for block in section.blocks %}
        <div class="recomended__item">
            <a href="{{ block.settings.link_collection }}">
                <img src="{{ block.settings.collection.image | image_url }}" alt="{{ block.settings.collection.image.alt | escape }}" >
            </a>
            <h2><a href="{{ block.settings.link_collection }}">{{ block.settings.label__link_collection }}</a></h2>
        </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Recomended collections",
    "settings": [],
    "blocks": [
        {
            "name":"collection",
            "type":"image",
            "settings":[
                {
                    "type": "url",
                    "id": "link_collection",
                    "label": "Link collection"
                },
                {
                    "type": "text",
                    "id": "label__link_collection",
                    "label": "Link collection"
                },
                {
                    "type":"collection",
                    "id":"collection",
                    "label":"Select collection"
                }
            ]
        }
    ],
    "presets":[
       {
          "name":"Recomended collections"
       }
    ]
  }
{% endschema %}

<style>
    .recomended__content{
        display: flex;
        justify-content: space-between;
        margin: 30px 15px 200px 15px;
        gap: 30px;
    }

    .recomended__item{
        width: 50%;
        text-align: center;
    }

    .recomended__item img{
        width: 100%;
        height: 500px;
        margin-bottom: 20px;
        object-fit: cover;
    }

    .recomended__item h2{
        font-size: 30px;
        font-weight: 100;
    }

    .recomended__item h2 a{
        color: #000;
    }

    @media screen and (max-width: 990px) {
        .recomended__content{
            flex-direction: column;
            gap: 60px;
        }

        .recomended__item{
            width: 100%;
        }
    }
</style>