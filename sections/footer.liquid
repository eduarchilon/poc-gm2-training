{{ 'footer.css' | asset_url | stylesheet_tag }}

<footer class="footer">
    <div class="container footer-container">
        <div class="footer__top">
            {% for block in section.blocks %}
            <div class="footer__top-column">
                <h5>{{ block.settings.title }}</h5>
                {% if block.settings.text != blank %}
                <p>{{block.settings.text }}</p>
                {% endif %}
                <ul>
                    {% for link in block.settings.menu.links %}
                    <li>
                        <a href="{{ link.url }}">{{
                            link.title | escape
                            }}</a>
                    </li>
                    {% endfor %}
                </ul>
                {%- if block.settings.show_social ==true -%}
                <ul class="footer__social-media">
                    {%- if settings.social_twitter_link != blank -%}
                    <li class="social-media-icon">
                        <a href="{{ settings.social_twitter_link }}">
                            {%- render 'icon-twitter' -%}
                        </a>
                    </li>
                    {%- endif -%}
                    {%- if settings.social_facebook_link != blank -%}
                    <li class="social-media-icon">
                        <a href="{{ settings.social_facebook_link }}">
                            {%- render 'icon-facebook' -%}
                        </a>
                    </li>
                    {%- endif -%}
                    {%- if settings.social_instagram_link != blank -%}
                    <li class="social-media-icon">
                        <a href="{{ settings.social_instagram_link }}">
                            {%- render 'icon-instagram' -%}
                        </a>
                    </li class="social-media-icon">
                    {%- endif -%}
                    {%- if settings.social_youtube_link != blank -%}
                    <li class="social-media-icon">
                        <a href="{{ settings.social_youtube_link }}">
                        {%- render 'icon-youtube' -%}
                        </a>
                    </li>
                    {%- endif -%}
                </ul>
                {%- endif -%}
            </div>
            {% endfor %}
        </div>
        <div class="footer__bottom">
            <p class="footer-copy">{{ section.settings.copy-text }}</p>
        </div>
    </div>
</footer>

<style>
    .footer__social-media{
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .social-media-icon a svg{
        width: 25px;
        height: 25px;
        margin: auto;
        display: block;
    }
</style>

{% schema %}
    {
        "name": "footer",
        "settings": [
            {
                "type": "text",
                "id": "copy-text",
                "label": "copyright text"
            }
        ],
        "blocks": [
            {
                "type": "text",
                "name": "text",
                "settings": [
                    {
                        "type": "text",
                        "id": "title",
                        "label": "Heading",
                        "default": "Link heading"
                    },
                    {
                        "type": "text",
                        "id": "text",
                        "label": "Text",
                        "default": "text column"
                    },
                    {
                        "type": "link_list",
                        "id": "menu",
                        "label": "menu"
                    },
                    {
                        "type": "checkbox",
                         "id": "show_social",
                        "default": false,
                         "label": "Show"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "footer"
            }
        ]
    }
{% endschema %}