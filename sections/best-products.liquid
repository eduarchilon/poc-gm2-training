<div class="best-products__section">
    <div class="container">
        <div class="best-products__title">
            <h2>{{ section.settings.section-title }}</h2>
        </div>
        <div class="best-products__content">
            {% for product in section.settings.collection.products %}
            {% render 'product-card', product: product %}
            {% endfor %}
        </div>
        <div class="best-products__link">
            <a href="{{ section.settings.link_collection }}" class="shop-link">{{ section.settings.link_collection_label |
                escape }}</a>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Best products",
    "settings": [
        {
            "type": "url",
            "id": "link_collection",
            "label": "Link"
        },
        {
            "type": "text",
            "id": "link_collection_label",
            "label": "Label link",
            "default": "Shop all products"
        },
        {
            "type": "text",
            "id": "section-title",
            "label": "Section title",
            "default": "BEST SELLERS"
        },
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
        }
    ],
    "presets":[
       {
          "name":"Best products"
       }
    ]
  }
{% endschema %}

<style>
    .best-products__section {
        margin: 30px 0;
    }

    .best-products__title {
        margin-bottom: 4em;
        text-align: center;
        font-size: 20px;
        letter-spacing: 4px;
    }

    .best-products__content {
        display: grid;
        width: 100%;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-gap: 30px;
    }

    .best-products__link{
        width: fit-content;
        margin: auto;
        display: block;
        margin-top: 65px;
    }
</style>