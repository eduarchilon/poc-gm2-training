<div id="textsection">
    <div class="simpletext">
        <h1> {{ section.settings.text-box }} </h1>
    </div>
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'text' %}
                <div class="simpletext" {{ block.shopify_attributes }}>
                    <h3> {{ section.settings.text }} </h3>
                </div>
        {% endcase %}
    {% endfor %}
</div>
   
{% schema %}
    {
        "name": "test-section",
        "settings": [
        {
            "id": "text-box",
            "type": "text",
            "label": "Heading"
        }
        ],
        "blocks": [
            {
                "name": "text",
                "type": "text",
                "settings": [
                    {
                        "type": "text",
                        "id": "subtitle",
                        "label": "subtitle",
                        "default": "Example subtitle"
                    }
                ]
            }
        ],
        "presets": [
        {
            "name": "test-preset"
        }
        ]
    }
{% endschema %}
  