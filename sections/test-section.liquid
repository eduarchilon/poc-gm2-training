<div id="shopify-section-textsection">
    {% for block in section.blocks %}
    {% case block.type %}
    {% when 'text' %}
    <div class="text" {{ block.shopify_attributes }}>
        <h3 class="huy">{{ block.settings.text-text }}</h3>
    </div>
    {% endcase %}
    {% endfor %}
</div>

<style>
    .huy{
        background-color: red;
        width: 200px;
        color: white;
    }
</style>

{% schema %}
{
    "name":"test-text",
    "blocks":[
       {
          "name":"text-text",
          "type":"text",
          "settings":[
             {
                "type":"text",
                "id":"text-text",
                "label":"text",
                "default": "Hola mundo"
             }
          ]
       }
    ],
    "presets":[
       {
          "name":"test-preset"
       }
    ]
 }
{% endschema %}
