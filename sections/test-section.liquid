<div id="textsection">
    <div class="simpletext">
        <h1> {{ section.settings.text-box }} </h1>
    </div>
    {% for block in section.blocks %}
    <div class="simpletext">
        {% for text in block.settings.text %}
        <p><span>{{ text }}</span></p>
        {% endfor %}
    </div>
    {% endfor %}
</div>
   
{% schema %}
    {
        "name": "test-section",
        "settings": [
        {
            "id": "text-box",
            "type": "text",
            "label": "Heading"
        }
        ],
        "blocks": [
            {
                "name": "text",
                "type": "text",
                "settings": [
                    {
                        "type": "text",
                        "id": "subtitle",
                        "label": "subtitle",
                        "default": "Hola mundo"
                    }
                ]
            }
        ],
        "presets": [
        {
            "name": "test-preset"
        }
        ]
    }
{% endschema %}
  