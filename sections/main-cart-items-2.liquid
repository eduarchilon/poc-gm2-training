    let cantidadSeleccionada = {
        item1: 0,
        item2: 0,
        item3: 0
    };

    function actualizarCantidad(id) {
        cantidadSeleccionada[id] = document.getElementById(id).valueAsNumber;
    }

    const elementos = document.querySelectorAll('input[type="number"]');

    for (let i = 0; i < elementos.length; i++) {
        const elemento = elementos[i];
        elemento.addEventListener('change', function () {
            actualizarCantidad(elemento.id);
        });
    }

    const boton = document.getElementById('boton');

    boton.addEventListener('click', function () {
        let total = 0;
        for (const key in cantidadSeleccionada) {
            total += cantidadSeleccionada[key];
        }
        alert(`Total seleccionado: ${total}`);
    });
</script>


