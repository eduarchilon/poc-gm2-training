<div class="">
    <div class="swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper w-[100%] h-[600px]">
            <!-- Slides -->
            {%- comment -%} <div class="swiper-slide text-white relative cursor-pointer">
                <img class="block object-cover w-[100%]" src="https://cdn.shopify.com/s/files/1/0705/9449/4786/files/img_bg_2_jpg.webp?v=1675555319" alt="">
            </div> {%- endcomment -%}
            {% for block in section.blocks %}
            <div class="swiper-slide text-white relative bg-grey-50 cursor-pointer text-center"
            {% if block.settings.image  %} 
            style="background-image: url('{{ block.settings.image | image_url }}');"
            {%- elsif block.settings.color_background -%}
            style="background-image: '{{ block.settings.color_background }};'" 
            {%- else -%}
            style="background-color: '{{ block.settings.color_background }}';" 
            {% endif %}>
                <h2 class="slider-head-1">MEN'S</h2>
                <h2 class="slider-head-2">SHOES</h2>
                <h2 class="slider-head-3">COLLECTION</h2>
                <p class="slider-text">New trending shoes</p>
                <a href="#" class="shop-link slider-link block m-auto">SHOP COLLECTION</a>
                {%- comment -%} <h2 class="slider-head-1">{{ block.settings.head-1 }}</h2>
                <h2 class="slider-head-2">{{ block.settings.head-2 }}</h2>
                <h2 class="slider-head-3">{{ block.settings.head-3 }}</h2>
                <p class="slider-text">{{ block.settings.text }}</p>
                <a href="{{ block.settings.link_collection }}" class="shop-link slider-link">{{ block.settings.link_collection_label |
                    escape }}</a> {%- endcomment -%}
            </div>
            {% endfor %}
            ...
        </div>
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>

        <!-- If we need scrollbar -->
        <div class="swiper-scrollbar"></div>
    </div>
</div>

{%- style -%}
    .swiper-slide{
        height: 100%;
        width: 100%;
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        position: relative;
    }
{%- endstyle -%}

<style>
</style>

{% schema %}
{
    "name":"test-swipper",
    "settings":[
       
    ],
    "blocks":[
        {
            "name":"Slide image",
            "type":"image",
            "settings":[
                {
                    "type":"image_picker",
                    "id":"image",
                    "label":"Select image slide"
                },
                {
                    "type": "color_background",
                    "id": "color_background",
                    "label": "Background",
                    "default": "grey"
                },
                {
                    "type":"text",
                    "id":"head-1",
                    "label":"Head 1"
                },
                {
                    "type":"text",
                    "id":"head-2",
                    "label":"Head 2"
                },
                {
                    "type":"text",
                    "id":"head-3",
                    "label":"Head 3"
                },
                {
                    "type":"text",
                    "id":"text",
                    "label":"text"
                }
            ]
        }
    ],
    "presets":[
       {
          "name":"test-swipper"
       }
    ]
 }
{% endschema %}

<script>
    const swiper = new Swiper('.swiper', {
        // Optional parameters
        direction: 'horizontal',
        loop: true,

        // If we need pagination
        pagination: {
            el: '.swiper-pagination',
        },

        // Navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },

        // And if we need scrollbar
        scrollbar: {
            enabled: false,
            hide: true,
        },
        // autoplay: {
        //     delay: 5000,
        // },
    });
</script>